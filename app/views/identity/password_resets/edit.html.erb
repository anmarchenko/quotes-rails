<h1><%= t("password_resets.edit.header") %></h1>

<%= form_with(model: @user, url: identity_password_reset_path, method: :patch) do |f| %>
  <%= f.hidden_field :sid, value: params[:sid] %>

  <%= f.input :password_field, :password,
                label: t("passwords.edit.password"),
                required: true %>

  <%= f.input :password_field, :password_confirmation,
              label: t("passwords.edit.password_confirmation"),
              required: true %>

  <%= f.submit t("password_resets.edit.action"), class: "mt-5" %>
<% end %>
