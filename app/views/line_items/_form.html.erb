<%= form_with model: [quote, line_item_date, line_item] do |f| %>
  <%= f.input :text_field, :name, label: "Name", autofocus: true  %>
  <%= f.input :number_field, :quantity, label: "Quantity"  %>
  <%= f.input :number_field, :unit_price, label: "Unit price"  %>
  <%= f.input :text_field, :description, label: "Description"  %>

  <div class="flex flex-row space-x-2 mt-5">
    <%= f.submit t("forms.save") %>
    <%= link_to t("forms.cancel"), quote_path(quote), class: "btn btn-secondary btn-sm" %>
  </div>
<% end %>
