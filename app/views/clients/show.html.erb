<h1>Client Details</h1>

<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<h2>Quotes</h2>
<% if @client.quotes.any? %>
  <ul>
    <% @client.quotes.each do |quote| %>
      <li><%= link_to quote.name, quote_path(quote) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No quotes available for this client.</p>
<% end %>

<%= link_to 'Edit', edit_client_path(@client) %> |
<%= link_to 'Back', clients_path %>
